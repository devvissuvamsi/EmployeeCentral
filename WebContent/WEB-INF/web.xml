<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>EmployeeCentral</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
	<servlet>
		<description></description>
		<display-name>DefaultServlet</display-name>
		<servlet-name>DefaultServlet</servlet-name>
		<servlet-class>com.simplilearn.servlet.DefaultServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.index</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.create</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.edit</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.edit?</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.delete</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/user.view</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/customer.index</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/customer.create</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/customer.edit</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/customer.edit?</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/customer.delete</url-pattern>
	</servlet-mapping>		
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/department.index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/department.create</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>DefaultServlet</servlet-name>
		<url-pattern>/employee.index</url-pattern>
	</servlet-mapping>	
	<servlet>
		<description></description>
		<display-name>LogoutServlet</display-name>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.simplilearn.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AppExceptionHandlerServlet</display-name>
		<servlet-name>AppExceptionHandlerServlet</servlet-name>
		<servlet-class>com.simplilearn.servlet.exception.AppExceptionHandlerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppExceptionHandlerServlet</servlet-name>
		<url-pattern>/AppExceptionHandler</url-pattern>
	</servlet-mapping>	
	<error-page>
		<error-code>404</error-code>
		<location>/AppExceptionHandler</location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/AppExceptionHandler</location>
	</error-page>
</web-app>